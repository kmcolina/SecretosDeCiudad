<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.4)), url(<%= cl_image_path @route.photo.key %>);;
box-shadow: 1px 1px 2px 2px rgba(0, 0, 0, 0.3); width: 100%;">
    <div class="container">
      <h1 ><%= @route.name %></h1>
      <p style><%= current_user.email %></p>
    </div>
</div>
<div class="d-flex">
  <%# Sidebar %>
  <div class="sidebar-sticky border-right">
      <ul class="nav flex-column">
        <li>
          <%= link_to "Ver rutas", routes_path, class: 'nav-link title' %>
        </li>
        <li>
          <%= link_to "Ver guías", users_path, class:"nav-link title" %>
        </li>
        <li>
          <%= link_to "Ver lugares", places_path, class:"nav-link title" %>
        </li>
        <li>
          <%= link_to "Ver pagos", pago_valid_path, class:"nav-link title" %>
        </li>
      </ul>
  </div>

  <div class="container mt-2">

    <ul class="p-0">
      <div>
        <div class="header-section mt-5 ">
          <p><%= @route.description %></p>
        </div>
        <div class="cards-show-places">
          <%@lugares.each do |lugar| %>
              <ul class="card-show-shadow">
                <p class = "d-flex justify-content-center texts-mar "><strong><%= lugar.name %></strong></p>
                <% if lugar.photo.attached? %>
                  <%= cl_image_tag lugar.photo.key , class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                <% else %>
                  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
                <% end %>
                <p class = " mar-texto-card "><strong>Dirección: </strong><%= lugar.address %></p>
                <p id="p-description" ><%= lugar.description %></p>
              </ul>
          <% end %>
        </div>
        <table class="table extra-mar">
          <thead class="thead-green">
              <tr class="tr-places">
                <th scope="col">DURACIÓN</th>
                <th scope="col">FECHAS DISPONIBLES</th>
                <th scope="col">TENDENCIAS</th>
              </tr>
          </thead>
          <tbody>
              <tr>
                <td><%= @route.duration %> hrs</td>
                <td>
                  <% @fechas_all.each do |date|%>
                    /<%= date %>/
                  <% end %>
                </td>
                <td><%= @route.places_interest %></td>
              </tr>
          </tbody>
        </table>
      </div>
    </ul>
    <p>

    </p>

  </div>
</div>
