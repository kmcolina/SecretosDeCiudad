<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @route.photo.key %>);">
  <div class="container">
    <p><%= @route.name %></p>
  </div>
</div>

<div class="d-flex">
  <%# Sidebar %>
  <div class="sidebar-sticky border-right">
      <ul class="nav flex-column">
        <li>
          <%= link_to "Ver Rutas", routes_path, class: 'nav-link title' %>
        </li>
        <li>
          <%= link_to "Ver Guías", users_path, class:"nav-link title" %>
        </li>
        <li>
          <%= link_to "Ver Pagos", routes_path, class:"nav-link title" %>
        </li>
      </ul>
  </div>

  <div class="container">
    <ul class="list-show-admin-routes">
      <div class="header-section">
        <div id="route-header">
          <li><%= @route.description %></li>
          <li><strong>Duración: </strong><%= @route.duration %> hrs</li>
        </div>
        <div id="route-description">
          <li><strong>Fechas disponibles: </strong><% @fechas_all.each do |date|%>
                <li><%= date %></li>
              <% end %>
          </li>
        </div>
      </div>
      <div class="">
        <%@lugares.each do |lugar| %>
          <div class="card-show-places">
            <div class="app">
              <header style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path lugar.photo.key %>);">
              </header>
              <main>
                <h3><%= lugar.name %></h3>
                <p><%= lugar.address %></p>
                <p><%= lugar.description %></p>
              </main>
            </div>
          </div>
        <% end %>
      </div>
      <%# Tendencias %>
      <div id="trending-show">
          <div class="row">
            <div>
              <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img class="d-block w-100" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/dinner.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                      <img class="d-block w-100" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                      <img class="d-block w-100" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg" alt="Third slide">
                    </div>
                  </div>
                  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
              </div>
              <strong>Tendencias: </strong><%= @route.places_interest %>
            </div>
          </div>
      </div>
    </ul>
  </div>
</div>
