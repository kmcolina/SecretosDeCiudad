<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.4)), url(<%= cl_image_path @place.photo.key %>);;
box-shadow: 2px 2px 2px 3px rgba(0, 0, 0, 0.3); width: 100%;">
    <div class="container">
      <h1 ><%= @place.name %></h1>
      <p style><%= current_user.email %></p>
    </div>
</div>
<div class="d-flex">
  <%# Sidebar %>
  <div class="sidebar-sticky border-right mt-2">
      <ul class="nav flex-column">
        <li>
          <%= link_to "Ver Lugares", places_path, class:"nav-link title" %>
        </li>
        <li>
          <%= link_to "Ver Rutas", routes_path, class: 'nav-link title' %>
        </li>
        <li>
          <%= link_to "Ver Guías", users_path, class:"nav-link title" %>
        </li>
        <li>
          <%= link_to "Ver Pagos", pago_valid_path, class:"nav-link title" %>
        </li>
      </ul>
  </div>

  <div class="container mt-5 book-mar">
    <table class="table">
      <thead class="thead-green">
        <tr>
          <td scope="col"><strong>DIRECCIÓN</strong></td>
          <td scope="col"><strong>DESCRIPCIÓN</strong></td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @place.address %></td>
          <td><%= @place.description %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
