<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @place.photo.key %>);">
  <div class="container">
    <p><%= @place.name %></p>
  </div>
</div>

<div class="d-flex">
  <%# Sidebar %>
  <div class="sidebar-sticky border-right">
      <ul class="nav flex-column">
        <li>
          <%= link_to "Ver Lugares", places_path, class:"nav-link title" %>
        </li>
        <li>
          <%= link_to "Ver Rutas", routes_path, class: 'nav-link title' %>
        </li>
        <li>
          <%= link_to "Ver Guías", users_path, class:"nav-link title" %>
        </li>
        <li>
          <%= link_to "Ver Pagos", routes_path, class:"nav-link title" %>
        </li>
      </ul>
  </div>

  <div class="container">
    <table class="table">
      <thead class="thead-green">
        <tr>
          <td scope="col"><strong>DIRECCIÓN</strong></td>
          <td scope="col"><strong>DESCRIPCIÓN</strong></td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @place.address %></td>
          <td><%= @place.description %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
