<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.4)), url(https://source.unsplash.com/-icmOdYWXuQ/1600x900);;
box-shadow: 2px 2px 2px 3px rgba(0, 0, 0, 0.3); width: 100%;">
    <div class="container">
      <h1 >Mi Calendario de Rutas</h1>
      <p style><%= current_user.email %></p>
    </div>
</div>

<div class="d-flex mt-2">
  <%# Sidebar %>
  <div class="sidebar-sticky border-right">
    <ul class="nav flex-column">
      <li class= "nav-link title">Mis Rutas</li>
      <% @guide_routes.each do |route| %>
          <li class="nav-link"><%= route.name %> </li>

      <% end %>
    </ul>
  </div>

  <%# Tabla %>
  <div class="container mt-5">
        <% @guide_routes.each do |route| %>

      <table class="table">
        <thead class="thead-green">
        <p class =" title-table d-flex justify-content-center"><%=route.name %></p>
          <tr>
            <th scope="col">Fecha de la ruta</th>
            <th scope="col">Duraci√≥n</th>
          </tr>
        </thead>
        <tbody>
            <tr>

              <% @fechas_all = [] %>
              <% fechas= route.available_dates %>
              <% array_fechas = fechas.split(',')  %>
              <% array_fechas.each do |fecha|  @fechas_all << Date.strptime(fecha, "%Y%m%d") end %>
              <% @fechas_all.each do |date|%>
                  <tr>
                    <td><%= link_to date , guide_show_path(route,date), class:"nav-link title"%> </td>
                    <td><%= route.duration %> hrs </td>
                    <tr>
                    </tr>
                  </tr>

              <% end %>
            </tr>
          <% end %>


        </tbody>
      </table>

  </div>
</div>
