<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1576470290805-d094d04aba29?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1032&q=80);">
    <div class="container">
      <h1><%= link_to routes_path do %>
        <i class="fas fa-chevron-left"></i>
      <% end %><strong>My routes calendar</strong></h1>
      <p>Secretos de Ciudad</p>
    </div>
</div>

<div class="d-flex">
  <%# Sidebar %>
  <div class="sidebar-sticky border-right">
            <ul class="nav flex-column">
              <li>
                <%= link_to "View all", routes_path, class:"nav-link title"%>
              </li>
              <li>
                <%= link_to "Ruta 1", routes_path, class:"nav-link" %>
              </li>
              <li>
                <%= link_to "Ruta 2", routes_path, class:"nav-link" %>
              </li>
              <li>
                <%= link_to "Ruta 3", routes_path, class:"nav-link" %>
              </li>
              <li>
                <%= link_to "Ruta 4", routes_path, class:"nav-link" %>
              </li>
              <li>
                <%= link_to "Ruta 5", routes_path, class:"nav-link" %>
              </li>
            </ul>
  </div>

  <div class="container">
    <div class="container d-flex justify-content-between">
      <div class="first-col-guide">
        <%# Cards %>
        <div class="row">
          <div>
            <%# Header Column %>
            <div class="ul-guide">
              <div class="text-header d-flex justify-content-between mt-3">
                <p><strong><%= @route.name %></strong></p>
                <p><strong><%= @route.duration %> hrs</strong></p>
              </div>

              <%# mapa %>
              <div id="map" class="card"
                style="height: auto"
                data-markers="<%= @markers.to_json %>"
                data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
              </div>

              <%# DescripciÃ³n %>
              <div>
                <p class="mt-2"><%= @route.description %></p>
              </div>

              <%# Tendencias %>
              <div id="trending-show-guide">
                <div class="row">
                  <div>
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                      <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                      </ol>
                      <div class="carousel-inner">
                        <div class="carousel-item active">
                          <img class="d-block w-100" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/dinner.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                          <img class="d-block w-100" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                          <img class="d-block w-100" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg" alt="Third slide">
                        </div>
                      </div>
                      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                    <strong>Tendencias: </strong><%= @route.places_interest %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="second-col-guide">
        <div class="card-user border-bottom">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar", alt: "avatar" %>
          <div class="card-user-info">
            <h3>Username</h3>
            <h4>user@email.com</h4>
          </div>
        </div>
        <div class="card-user border-bottom">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar", alt: "avatar" %>
          <div class="card-user-info">
            <h3>Username</h3>
            <h4>user@email.com</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
