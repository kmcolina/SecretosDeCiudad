<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.4)), url(<%= cl_image_path @route.photo.key %>);;
box-shadow: 1px 1px 2px 2px rgba(0, 0, 0, 0.3); width: 100%;">
    <div class="container">
      <h1><%= link_to routes_path do %>
        <i class="fas fa-chevron-left"></i>
      <% end %><strong><%= @route.name %></strong></h1>
      <p><%= @fecha %></p>
    </div>
</div>

<div class="d-flex">
  <%# Sidebar %>
  <div class="sidebar-sticky border-right mt-2">
            <ul class="nav flex-column">
              <li>
                <%= link_to "Ver todo", routes_path, class:"nav-link title"%>

              </li>
            </ul>
  </div>

  <div class="container mt-5 mb-5">
    <div class="container d-flex justify-content-between">
      <div class="first-col-guide">
        <%# Cards %>
        <div class="row">
          <div>
            <%# Header Column %>
            <div class="ul-guide">
              <div class="text-header d-flex justify-content-between mt-3">
              </div>

              <%# mapa %>
              <div id="map" class="card"
                style="height: auto"
                data-markers="<%= @markers.to_json %>"
                data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
              </div>

              <%# Descripción %>
              <div>
                <p class="show-guide-map"><%= @route.description %> <strong> Duración de la ruta: <%= @route.duration %> hrs</strong></p>
              </div>

              <%# Tendencias %>
              <div id="trending-show-guide ">
                <div class="row tendencia-show-guide">
                  <div class = "">
                    <strong>Tendencias: </strong><%= @route.places_interest %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="second-col-guide">
        <p class = "title-table">Usuarios que reservaron</p>
        <% @usr.each  do |usuario|%>
          <div class="card-user border-bottom card-user-guide-show">
          <% @foto = User.find(usuario.id) %>
            <% if @foto.avatar.attached? %>
              <%= cl_image_tag @foto.avatar.key , class: "avatar ", alt: "avatar"%>
            <% else %>
              <%= image_tag "https://images.unsplash.com/photo-1502877828070-33b167ad6860?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTJ8fHByb2ZpbGV8ZW58MHwyfDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" ,class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
            <% end %>
            <div class="card-user-info">
              <h4><%= usuario.email %></h4>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
