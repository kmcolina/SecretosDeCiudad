
<%# Tendencias %>
<div>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= cl_image_tag  @route.photo.key, class:"d-block w-100", style: "opacity: 0.8" %>
        <div class="carousel-caption d-none d-md-block">
          <div class="container text-carousel">
            <h1><strong><%= @route.name %></strong></h1>
            <p>Secretos de Ciudad</p>
          </div>
        </div>
      </div>

      <%@lugares.each do |lugar| %>
        <div class="carousel-item ">
          <%= cl_image_tag lugar.photo.key, class:"d-block w-100", style: "opacity: 0.8" %>
          <div class="carousel-caption d-none d-md-block">
            <div class="container text-carousel">
              <h1><strong><%= @route.name %></strong></h1>
              <p>Secretos de Ciudad</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="container">

  <div class="container column-show" >
      <%# Cards %>
      <div class="row">
        <div>
          <ul class="ul-show">
          <p class=" card-description li-description mt-5"><%= @route.description %></p>
          <div class="">
            <%@lugares.each do |lugar| %>
              <div class="card-show-places">
                <div class="app">
                  <header style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path lugar.photo.key %>);">
                  </header>
                  <main>
                    <h3><%= lugar.name %></h3>
                    <p><%= lugar.address %></p>
                    <p><%= lugar.description %></p>
                  </main>
                </div>
              </div>
            <% end %>
          </div>
          </ul>
        </div>
      </div>

      <%# mapa %>
      <div id="map" class="card mt-5 mb-5"
        style="height: 30%;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
  </div>

  <div class="container">
        <%# Reviews %>
    <div id="reviews">
      <%# Add Review %>
      <div class="d-flex justify-content-between">
        <div id="add-review" >
          <h3 class = "d-flex justify-content-center mb-3">¿Qué te pareció la ruta?</h3>
          <%= simple_form_for([@route, @review]) do |f| %>
            <%= f.input :comment, placeholder: "agrega tu comentario aca..." , label: false %>
            <%= f.input :rating, as: :select, collection: (1..5), label: false, required: true, prompt: "What's your rating", input_html: { id: "review_rating", class: "estrella" } %>
            <%# DEBERIA IR COMPROBACION DEL USUARIO  %>
            <%= f.submit class: "btn btn-dark", value: "Comentar" %>
            <small><em class="text-muted">inicia sesión para comentar!</em></small>
          <% end %>
        </div>

        <%# Card del guía %>
        <div class="scd-col-card-guide">
          <div class="card-guide">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "card-photo", alt: "avatar-large" %>
            <div class="card-guide-info">
              <h3>Título del card del guía</h2>
              <h4>Descripción del guía</h3>
              <p><strong>Duración: </strong><%= @route.duration %> hrs
              </p>
              <p><strong>Fechas disponibles: </strong><% @fechas_all.each do |date|%>
                <li><%= date %></li>
              <% end %>
              </p>
              <p id="btn-book"><%= link_to "Reservar", new_route_booking_path(@route), class: "btn btn-dark", id: "letter-ligth" %></p>
            </div>
          </div>
        </div>

      </div>

      <%# View Reviews %>
      <div >
        <h3 class="h3-review d-flex justify-content-center;">Opiniones</h3>
        <% if @route.reviews.empty? %>
          <small><em class="text-muted">Be the first to comment!</em></small>
        <% end %>

        <% @route.reviews.each do |review| %>
          <div class="card-review">
            <% @foto = User.find(review.user_id) %>
            <% if @foto.avatar.attached? %>
              <%= cl_image_tag @foto.avatar.key , class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= image_tag "https://images.unsplash.com/photo-1529946825183-536c6317f60e?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Nnx8YW5vbnltb3VzfGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" ,class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
            <% end %>
            <% review.rating.times do %>
              <%= %>
              <i class="fas fa-star fa-star-yellow"></i>
            <% end %>
            <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
            <p class = "comment mt-2 ml-5" id="review-<%= review.id %>"> <%= review.comment %> </p>


          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>


