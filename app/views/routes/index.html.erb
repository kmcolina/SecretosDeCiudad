<%= render 'shared/banner' unless params[:query].present?%>
<% if params[:query].present? %>
   <div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.4)), url(https://source.unsplash.com/HTnycx0h_kk/1600x900);;
box-shadow: 1px 1px 2px 2px rgba(0, 0, 0, 0.3); width: 100%;">
    <div class="container">
      <h1 style="text-transform:none">Resultados de b√∫squeda</h1>
    </div>
</div>
<%end %>

<a id="prueba"></a>
<div class="m-t-5">
<section class="wrapper">
  <div class="container">
    <div class="search-form-control form-group">
      <%= form_tag routes_path, method: :get do  %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Busca un destino" %>

          <%= button_tag(type: "submit", class: "btn") do %>
              <i class="fas fa-search"></i>
          <% end %>
      <% end %>
    </div>

    <destacado>
    <h3 class = "d-flex justify-content-center">Rutas Destacadas</h3>
    </destacado>

    <div class="cards show-usr-mar">
          <% @routes.each do |route| %>

            <div class="card card-has-bg click-col d-flex flex-column" style="background-image:url(<%= cl_image_path route.photo.key %>);">
              <div class="flex-grow-1"></div>
              <div class="card-img-overlay">
                <h3 id="name"><%= route.name %></h3>
                <%= link_to route_path(route) do %>
                  <i class="fas fa-chevron-right"></i>
                <% end %>
              </div>
            </div>
          <% end %>
    </div>
  </div>
</section>
