<div class="back-color container-fluid">
  <div class="row">
    <div class="col-md-3 my-5 form-login mx-auto">
      <div id="login-img">
        <%= image_tag("https://res.cloudinary.com/dmsb7zzg3/image/upload/v1636423788/caracas1_wqenvk.png", class: "logo") %>
      </div>
      <h5 class="new-post"><%= link_to root_path do %>
        <i class="fas fa-chevron-left" id="back-arrow"></i>
      <% end %> Iniciar Sesión</h5>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        label: :Correo,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        label: :Contraseña,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean, label: :Recuérdame if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <div class="btn-form">
              <%= f.button :submit, "Iniciar sesión", class:'btn btn-dark btn-form' %>
            </div>
          </div>
        <% end %>
        <p class="form-links"><%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>
