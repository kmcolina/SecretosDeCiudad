<div class="container col-md-4 mt-4 mb-4">
  <div class="form-book">
    <h5 class="new-post p-3"> Recuperar contrase√±a</h5>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs p-3">
          <%= f.input :email,
                      label: :Correo,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions btn-form p-3">
          <%= f.button :submit, "Enviar instrucciones", class:'btn btn-dark btn-form' %>
        </div>
      <% end %>
      <div class="form-links-forgot p-3">
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
