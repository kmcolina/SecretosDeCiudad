<div class="container col-md-7 mt-4 mb-4 d-flex">
  <div class="form-img" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1566344339346-7ce57083eb57?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=546&q=80);">
  </div>
  <div class="form">
    <h5 class="new-post"><%= link_to :back do %>
      <i class="fas fa-chevron-left" id="back-arrow"></i>
    <% end %> Mi perfil</h5>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :avatar, as: :file , label: :Foto, direct_upload: true%>
          <%= f.input :first_name, label: :Nombre, autofocus: true %>
          <%= f.input :last_name, label: :Apellido, autofocus: true %>
          <%= f.input :email, label: :Correo, required: true, autofocus: true %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Esperando confirmaci칩n de: <%= resource.unconfirmed_email %></p>
          <% end %>
          <div class="form-flex">
          <%= f.input :password, label: :Contrase침a,
                      hint: "Dejar en blanco si no deseas cambiarla",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, label: :Confirmar,
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          </div>

          <%= f.input :current_password, label: :Contrase침a_Actual,
                      hint: "Ingresa la contrase침a actual para confirmar los cambios",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="form-actions">
          <div class="btn-form">
            <%= f.button :submit, "Actualizar" , class:'btn btn-dark' %>
          <p class="mt-3"><%= link_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
          </div>
        </div>
      <% end %>
  </div>
</div>
