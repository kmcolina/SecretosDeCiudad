<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1576470290805-d094d04aba29?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1032&q=80);">
    <div class="container">
      <p>Administrar guías</p>
    </div>
</div>

<div class="d-flex">
    <%# Sidebar %>
    <div class="sidebar-sticky border-right">
      <ul class="nav flex-column">
        <li>
          <%= link_to "Crear Guía", new_guide_user_path(1), class: 'nav-link title' %>
        </li>
        <li>
          <%= link_to "Ver Rutas", routes_path, class:"nav-link title" %>
        </li>
        <li>
          <%= link_to "Ver Pagos", routes_path, class:"nav-link title" %>
        </li>
      </ul>
    </div>

    <%# Tabla %>
    <div class="container">
      <div class="min-vh-80">
        <table class="table">
          <thead class="thead-green">
            <tr>
              <th scope="col">NAME</th>
              <th scope="col">LAST NAME</th>
              <th scope="col">EMAIL</th>
            </tr>
          </thead>
          <tbody>
            <% @guides = User.where(rol:'guide') %>
            <% @guides.each do |guide| %>
              <tr>
                <td><%= guide.first_name %></td>
                <td><%= guide.last_name %></td>
                <td><%= guide.email %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
