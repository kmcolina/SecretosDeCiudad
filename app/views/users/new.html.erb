  <%= simple_form_for @user, :url => guide_users_path, :method => :post do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true %>
      <%= f.input :last_name,
                  required: true %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{6} characters minimum" if 6),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :rol,
                  required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Crear" %>
    </div>
  <% end %>
